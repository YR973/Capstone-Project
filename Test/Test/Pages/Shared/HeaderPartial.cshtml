	        @*                 <p></p> *@
	        @*                 <br/> *@
	        @*                 <p></p> *@
         @*                </div> *@
         @*            </div> *@
         @*        </form> *@
         @*    </div> *@
        </div> <!-- menu -->
    </div> <!-- container -->
</header> <!-- header -->
<body>
<main>
	@RenderBody()
</main>
</body>
<footer>
    <div class="container">
    			<div class="footer-widget">
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Important Link</h3>
    					</div>
    					<div class="widget-content">
    						<ul>
    							<li><a asp-page="Index">About</a></li>
    							<li><a asp-page="Index">Contact</a></li>
    							<li><a asp-page="Index">Refund Policy</a></li>
    							<li><a asp-page="Index">Terms & Conditions</a></li>
    						</ul>
    					</div>
    				</div>
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Information</h3>
    					</div>
    					<div class="widget-content">
    						<ul>
    							<li><a asp-page="/account">My Account</a></li>
    							<li><a asp-page="/orders">My Orders</a></li>
    							<li><a asp-page="/cart">Cart</a></li>
    							<li><a asp-page="/checkout">Checkout</a></li>
    						</ul>
    					</div>
    				</div>
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Follow us</h3>
    					</div>
    					<div class="widget-content">
    						<div class="follow">
    							<ul>
    								<li><a asp-page="Index"><img src="img/img/icons/facebook.png"></a></li>
    								<li><a asp-page="Index"><img src="img/img/icons/twitter.png"></a></li>
    								<li><a asp-page="Index"><img src="img/img/icons/instagram.png"></a></li>
    							</ul>
    						</div>						
    					</div>
    					<div class="widget-heading">
    						<h3>Subscribe for Newsletter</h3>
    					</div>
    				</div>
    			</div>
    		</div>
</footer>

</html>