<!DOCTYPE html>
<html>
<head>
    <title>My Store</title>
    <link href="css/style.css" rel="stylesheet" />
</head>
<body>
<header>
    <div class="container">
        <div class="brand">
            <div class="logo">
                <a asp-page="Index">
                    <img src="img/img/icons/online_shopping.png">
                    <div class="logo-text">
                        <p class="big-logo">Ecommerce</p>
                        <p class="small-logo">online shop</p>
                    </div>
                </a>
            </div> <!-- logo -->
            <div class="shop-icon">
                <div>
                    <a asp-page="">
                    <img src="img/img/icons/account.png">
                    </a>
                </div>
                
                <div>
                    <a asp-page="/Cart">
                    <img src="img/img/icons/shopping_cart.png">
                    </a>
                </div>
            </div> <!-- shop icons -->
        </div> <!-- brand -->

        <div class="menu-bar">
            <div class="menu">
                <ul>
                    <li><a asp-page="Index">Home</a></li>
                    <li><a asp-page="Index">Shop</a></li>
                    <li><a asp-page="Index">About</a></li>
                    <li><a asp-page="Index">Contact</a></li>
                </ul>
            </div>
            <div class="search-bar">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" placeholder="Search">
                        <img src="img/img/icons/search.png">
                    </div>
                </form>
            </div>
        </div> <!-- menu -->
    </div> <!-- container -->
</header> <!-- header -->
<main>
    @RenderBody()
</main>
</body>
</html>