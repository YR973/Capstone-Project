<!DOCTYPE html>
<html>
<head>
    <title>My Store</title>
    <link href="css/style.css" rel="stylesheet" />
</head>

<header>
    <div class="container">
        <div class="brand">
            <div class="logo">
                <a asp-page="Index">
                    <img src="img/img/icons/online_shopping.png">
                    <div class="logo-text">
                        <p class="big-logo">Ecommerce</p>
                        <p class="small-logo">online shop</p>
                    </div>
                </a>
            </div> <!-- logo -->
            <div class="shop-icon">
                <div>
                    <a asp-page="LogIn">
                    <img src="img/img/icons/account.png">
                    </a>
                </div>
                
                <div>
                    <a asp-page="/Cart">
                    <img src="img/img/icons/shopping_cart.png">
                    </a>
                </div>
            </div> <!-- shop icons -->
        </div> <!-- brand -->

        <div class="menu-bar">
            <div class="menu">
                <ul>
                    <li><a asp-page="Index">Home</a></li>
                    <li><a asp-page="/cart">Cart</a></li>
	                <li><a asp-page="/account">Account</a></li>
	                <li><a asp-page="/AdminOrders">Admin View</a></li>
                </ul>
            </div>
            <div class="search-bar">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" placeholder="Search">
                        <img src="img/img/icons/search.png">
                    </div>
                </form>
            </div>
        </div> <!-- menu -->
    </div> <!-- container -->
</header> <!-- header -->
<body>
<main>
	@RenderBody()
</main>
</body>
<footer>
    <div class="container">
    			<div class="footer-widget">
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Important Link</h3>
    					</div>
    					<div class="widget-content">
    						<ul>
    							<li><a asp-page="Index">About</a></li>
    							<li><a asp-page="Index">Contact</a></li>
    							<li><a asp-page="Index">Refund Policy</a></li>
    							<li><a asp-page="Index">Terms & Conditions</a></li>
    						</ul>
    					</div>
    				</div>
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Information</h3>
    					</div>
    					<div class="widget-content">
    						<ul>
    							<li><a asp-page="/account">My Account</a></li>
    							<li><a asp-page="/orders">My Orders</a></li>
    							<li><a asp-page="/cart">Cart</a></li>
    							<li><a asp-page="/checkout">Checkout</a></li>
    						</ul>
    					</div>
    				</div>
    				<div class="widget">
    					<div class="widget-heading">
    						<h3>Follow us</h3>
    					</div>
    					<div class="widget-content">
    						<div class="follow">
    							<ul>
    								<li><a asp-page="Index"><img src="img/icons/facebook.png"></a></li>
    								<li><a asp-page="Index"><img src="img/icons/twitter.png"></a></li>
    								<li><a asp-page="Index"><img src="img/icons/instagram.png"></a></li>
    							</ul>
    						</div>						
    					</div>
    					<div class="widget-heading">
    						<h3>Subscribe for Newsletter</h3>
    					</div>
    				</div>
    			</div>
    		</div>
</footer>

</html>