@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "Shared/HeaderPartial";
}
<!DOCTYPE html>

<html>
<head>
	<script src="js/search.js"></script>
</head>
<body>
<div>
	<main>
		<div class="container">
			<div class="new-product-section">
				<div class="product-section-heading">
					<h2>Featured Products</h2>
					<h3>New Collection</h3>
				</div>
				<div class="product-content">
					@foreach (var product in Model.Products)
					{
						//display products
						<div class="product">
							<a asp-page="/ViewProduct" asp-route-id="@product.ProductID">
								<img src="img/img/product/@(product.ProductID).png">
							</a>
							<div class="product-detail">
								<h3>Placeholder</h3>
								<h2>@product.Name</h2>
								<a asp-page="/ViewProduct" asp-route-id="@product.ProductID">View product</a>
								<p>@product.Price $</p>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</main>
</div>
</body>
</html>